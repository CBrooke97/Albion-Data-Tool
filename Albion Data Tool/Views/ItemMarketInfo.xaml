<UserControl x:Class="Albion_Data_Tool.Views.ItemMarketInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albion_Data_Tool.Views"
             mc:Ignorable="d" 
             d:Height="50" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="ItemNameTextBlock" VerticalAlignment="Center" Text="Item Name" FontSize="20" Margin="5"/>
            <ComboBox Name="CitySelectComboBox" Margin="5" FontSize="20">
                <ComboBoxItem Content="Thetford" IsSelected="True"/>
                <ComboBoxItem Content="Bridgewatch"/>
                <ComboBoxItem Content="Lymhurst"/>
                <ComboBoxItem Content="Fort Sterling"/>
                <ComboBoxItem Content="Martlock"/>
                <ComboBoxItem Content="Caerleon"/>
            </ComboBox>
            <TextBox Name="ItemPriceInputText" Width="150" Margin="5" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
